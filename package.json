{
  "name": "customer-support-chat-widget",
  "version": "0.1.0",
  "description": "Simple customer service chat widget with session persistence for React + TypeScript",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "create-bacon-app": "dist/cli/create-bacon-app.cjs"
  },
  "scripts": {
    "build": "tsup",
    "build:clean": "rm -rf dist && tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx || echo \"lint skipped\"",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "env:check": "node scripts/env-check.js",
    "smoke:ai": "vitest run packages/bacon-backend/__tests__/ai.smoke.test.ts",
    "stack:up": "docker compose up --build -d",
    "stack:down": "docker compose down --remove-orphans --volumes",
    "stack:logs": "docker compose logs -f",
    "stack:ps": "docker compose ps",
    "start": "npm run build && npm --prefix example run dev -- --port 5173 --strictPort",
    "start:preview": "npm run build && npm --prefix example run build && npm --prefix example run preview -- --port 4173 --strictPort",
    "db:up": "docker inspect chatbot1-pg >NUL 2>&1 && docker start chatbot1-pg || docker run -d --name chatbot1-pg -e POSTGRES_PASSWORD=chatpass -e POSTGRES_DB=chatbot1 -p 5432:5432 postgres:16-alpine",
    "db:start": "docker start chatbot1-pg",
    "db:stop": "docker stop chatbot1-pg",
    "db:rm": "docker rm -f chatbot1-pg",
    "db:logs": "docker logs -f chatbot1-pg",
    "start:db": "npm run db:up && npm start",
    "dev:all": "npm run build && concurrently -n db,web -c cyan,green \"docker compose up\" \"npm --prefix example run dev -- --port 5173 --strictPort\""
  },
  "keywords": [
    "chatbot",
    "customer-support",
    "react",
    "typescript",
    "widget"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.10",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitest/coverage-v8": "^1.6.1",
    "busboy": "^1.6.0",
    "concurrently": "^9.0.0",
    "jsdom": "^24.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "uuid": "^9.0.1",
    "vitest": "^1.6.0",
    "ws": "^8.18.0",
    "yaml": "^2.5.1"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.13"
  }
}
