{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "DOM",
      "ES2019"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}